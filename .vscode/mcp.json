{
  "servers": {
    "cds-mcp": {
      "type": "stdio",
      "command": "cds-mcp",
      "args": [],
      "env": {}
    },
    "fiori-mcp": {
      "type": "stdio",
      "timeout": 600,
      "command": "npx",
      "args": [
        "--yes",
        "@sap-ux/fiori-mcp-server@latest",
        "fiori-mcp"
      ]
    },
    "@ui5/mcp-server": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@ui5/mcp-server"
      ]
    },
    "cap-fiori-timetracking-mcp": {
      "type": "http",
      "url": "http://localhost:4004/mcp",
      "description": "CAP Fiori Time Tracking MCP Server - provides access to time tracking entities and business functions via @gavdi/cap-mcp plugin"
    },
    "inputs": []
  }
}
