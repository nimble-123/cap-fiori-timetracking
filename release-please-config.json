{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "release-type": "node",
      "pull-request-title-pattern": "chore: release v${version}",
      "pull-request-header": "🚀 **Release Time!** This PR contains the next release for our project.",
      "pull-request-footer": "🤖 Merging this PR triggers automatic tags and CHANGELOG updates.\n\nGenerated by release-please.",
      "changelog-sections": [
        { "type": "feat", "section": "🎉 New Features" },
        { "type": "fix", "section": "🐛 Bug Fixes" },
        { "type": "perf", "section": "⚡ Performance Improvements" },
        { "type": "deps", "section": "📦 Dependency Updates" },
        { "type": "docs", "section": "📚 Documentation" },
        { "type": "style", "section": "💄 Styles" },
        { "type": "refactor", "section": "🛠 Code Refactoring" },
        { "type": "ci", "section": "👷 Continuous Integration" },
        { "type": "chore", "section": "🔧 Maintenance", "hidden": true },
        { "type": "test", "section": "✅ Tests" }
      ],
      "extra-files": [
        {
          "type": "json",
          "path": "app/timetable/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "app/timetracking/package.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
