root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,cts,mts,cjs,mjs}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml,md,html,css,cds}]
indent_style = space
indent_size = 2

[*.{properties,env}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
