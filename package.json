{
  "name": "cap-fiori-timetracking",
  "version": "0.1.0",
  "private": true,
  "description": "SAP CAP-based time tracking solution with Fiori UI and a TypeScript backend.",
  "keywords": [
    "sap",
    "cap",
    "fiori",
    "ui5",
    "time-tracking",
    "typescript"
  ],
  "repository": "https://github.com/nimble-123/cap-fiori-timetracking",
  "license": "MIT",
  "author": {
    "name": "nimble-123",
    "url": "https://github.com/nimble-123"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "build": "cds build",
    "build:mta": "npm run clean && mbt build -t gen --mtar mta.mtar",
    "clean": "npx rimraf gen app/*/dist coverage junit.xml",
    "deploy:cf": "cf deploy gen/mta.mtar",
    "format": "prettier --write \"{src,app,srv,db,tests,.github,docs,.devcontainer}/**/*.{js,ts,json,md,yaml,yml,html,css}\"",
    "format:check": "prettier --check \"{src,app,srv,db,tests,.github,docs,.devcontainer}/**/*.{js,ts,json,md,yaml,yml,html,css}\"",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "jest": "AMS_DCN_ROOT=$npm_package_config_dcn_root jest ./tests",
    "lint": "cds lint",
    "start": "cds-serve",
    "pretest": "npx --package=@sap/ams-dev compile-dcl -d ams/dcl -o $npm_package_config_dcn_root",
    "test": "npm run jest",
    "posttest": "rm -rf $npm_package_config_dcn_root",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:security": "jest tests/security",
    "test:coverage": "jest --coverage ./tests",
    "test:watch": "jest --watch ./tests",
    "watch": "cds-tsx w --in-memory",
    "wdi5:timetable": "wdio run ./app/timetable/webapp/test/e2e/wdio.conf.ts"
  },
  "config": {
    "dcn_root": "gen/ams/dcn"
  },
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/attachments": "^3.1.0",
    "@cap-js/hana": "^2.3.4",
    "@gavdi/cap-mcp": "^1.3.0",
    "@sap-cloud-sdk/connectivity": "^4.1.2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap/ams": "^3.5.0",
    "@sap/cds": "^9.4.4",
    "@sap/xssec": "^4.11.0",
    "eslint": "^9.38.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@cap-js/cds-test": "^0.4.0",
    "@cap-js/cds-typer": ">=0.38.0",
    "@cap-js/cds-types": "^0.15.0",
    "@cap-js/console": "^1.0.2",
    "@cap-js/sqlite": "^2.0.4",
    "@jest/globals": "^30.2.0",
    "@openui5/types": "^1.141.2",
    "@sap/ams-dev": "^2.2.0",
    "@sap/cds-dk": "^9.4.3",
    "@sap/dev-cap-tools": "^1.48.0",
    "@sap/eslint-plugin-cds": "^4.1.0",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.8",
    "@sap/ux-specification": "^1.136.9",
    "@sap/ux-ui5-tooling": "^1.19.3",
    "@sapui5/ts-types": "^1.142.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "babel-jest": "^30.2.0",
    "cds-plugin-ui5": "^0.14.0",
    "cds-swagger-ui-express": "^0.10.0",
    "eslint": "^9.38.1",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "3.6.2",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wdio-timeline-reporter": "^5.1.4",
    "wdio-ui5-service": "^3.0.0"
  },
  "engines": {
    "node": ">=22 <25"
  },
  "cds": {
    "requires": {
      "application-logging": true,
      "connectivity": true,
      "destinations": true,
      "malware-scanner": true,
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "max.mustermann@test.de": {
              "password": "max",
              "roles": [
                "TimeTrackingUser",
                "TimeTrackingAdmin"
              ],
              "policies": [
                "cap.TimeTrackingUser",
                "cap.TimeTrackingAdmin"
              ]
            },
            "erika.musterfrau@test.de": {
              "password": "erika",
              "roles": [
                "TimeTrackingUser"
              ],
              "policies": [
                "cap.TimeTrackingUser"
              ]
            },
            "frank.genehmiger@test.de": {
              "password": "frank",
              "roles": [
                "TimeTrackingUser",
                "TimeTrackingApprover"
              ],
              "policies": [
                "cap.TimeTrackingUser",
                "cap.TimeTrackingApprover"
              ]
            }
          }
        },
        "db": {
          "kind": "sqlite"
        }
      },
      "[production]": {
        "auth": "ias",
        "xsuaa": true,
        "db": {
          "kind": "hana"
        }
      },
      "app-front": true
    },
    "log": {
      "levels": {
        "track-service": "info"
      }
    },
    "fiori": {
      "bypass_draft": true
    },
    "mcp": {
      "name": "cap-fiori-timetracking-mcp",
      "version": "0.0.1",
      "auth": "inherit",
      "instructions": "MCP server for CAP Fiori Time Tracking application. Provides access to time tracking entities, balances, and generation functions.",
      "capabilities": {
        "resources": {
          "listChanged": true,
          "subscribe": false
        },
        "tools": {
          "listChanged": true
        },
        "prompts": {
          "listChanged": true
        }
      }
    }
  },
  "sapux": [
    "app/timetable",
    "app/timetracking",
    "app/manage-activity-types"
  ]
}
