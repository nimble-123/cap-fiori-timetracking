{
  "name": "cap-fiori-timetracking",
  "version": "0.0.1",
  "description": "SAP CAP-based time tracking solution with Fiori UI and a TypeScript backend.",
  "repository": "https://github.com/nimble-123/cap-fiori-timetracking",
  "license": "MIT",
  "author": {
    "name": "nimble-123",
    "url": "https://github.com/nimble-123"
  },
  "keywords": [
    "sap",
    "cap",
    "fiori",
    "ui5",
    "time-tracking",
    "typescript"
  ],
  "engines": {
    "node": ">=18 <25"
  },
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/attachments": "^3.1.0",
    "@sap/cds": "^9.4.3",
    "eslint": "^9.38.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.0",
    "@cap-js/cds-typer": ">=0.38",
    "@cap-js/cds-types": "^0.15.0",
    "@cap-js/sqlite": "^2.0.3",
    "@jest/globals": "^30.2.0",
    "@openui5/types": "^1.141.2",
    "@sap/dev-cap-tools": "^1.47.10",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.8",
    "@sap/ux-ui5-tooling": "^1.19.1",
    "@sapui5/ts-types": "^1.141.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "cds-plugin-ui5": "^0.13.6",
    "cds-swagger-ui-express": "^0.10.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wdio-timeline-reporter": "^5.1.4",
    "wdio-ui5-service": "^3.0.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds-tsx w",
    "build": "cds build",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "format": "prettier --write \"{src,app,srv,db,tests}/**/*.{js,ts,json,md,yaml,yml,html,css}\"",
    "test": "jest ./tests",
    "test:watch": "jest --watch ./tests",
    "test:coverage": "jest --coverage ./tests",
    "wdi5": "wdio run ./app/timetable/webapp/test/wdi5/wdio.conf.ts"
  },
  "workspaces": [
    "app/*"
  ],
  "cds": {
    "requires": {
      "auth": {
        "kind": "mocked",
        "users": {
          "max.mustermann@test.de": {
            "password": "max",
            "roles": [
              "authenticated-user",
              "admin"
            ]
          },
          "erika.musterfrau@test.de": {
            "password": "erika",
            "roles": [
              "authenticated-user"
            ]
          }
        }
      }
    },
    "log": {
      "levels": {
        "track-service": "info"
      }
    },
    "fiori": {
      "bypass_draft": true
    }
  },
  "sapux": [
    "app/timetable",
    "app/timetracking"
  ],
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
